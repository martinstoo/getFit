<div class="container">
  <h1>Manage All Trainings</h1>
  <div class="text-center mb-4">
    <%= link_to "Back to Home", root_path, class: "btn btn-primary btn-lg" %>
    <%= link_to 'New Training', new_admin_training_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @trainings.each do |training| %>
          <tr>
            <td><%= training.title %></td>
            <td><%= truncate(training.description, length: 100) %></td>
            <td><%= link_to 'Show', admin_training_path(training), class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_admin_training_path(training), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', admin_training_path(training), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
