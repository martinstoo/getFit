<div class="container">
  <h1 class="text-center">Activity Logs</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Action</th>
        <th>Details</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <tbody>
      <% @activity_logs.each do |log| %>
        <tr>
          <td><%= log.benutzer.email %></td>
          <td><%= log.action %></td>
          <td><%= log.details %></td>
          <td><%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
