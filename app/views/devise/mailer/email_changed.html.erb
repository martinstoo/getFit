<div style="max-width: 600px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif;">
  <h2 style="color: #333; text-align: center;">Hello <%= @email %>!</h2>

  <% if @resource.try(:unconfirmed_email?) %>
    <p style="color: #665; line-height: 1.6;">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
  <% else %>
    <p style="color: #665; line-height: 1.6;">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
  <% end %>
</div>