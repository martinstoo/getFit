<div class="container">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <div class="button-group mt-4">
    <%= link_to 'Back to uebungen', coach_uebungs_path, class: 'btn btn-primary' %>
  </div>

  <%= render @training %>
  
  <div class="button-group mt-4">
    <%= link_to "Edit this training", edit_coach_training_path(@training), class: 'btn btn-warning' %>
    <%= button_to "Destroy this training", coach_training_path(@training), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
  </div>
</div>