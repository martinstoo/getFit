<!-- app/views/coach/trainings/index.html.erb -->
<h1>My Trainings</h1>
<%= link_to 'New Training', new_coach_training_path, class: 'btn btn-primary' %>
<table class=“table”>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.title %></td>
        <td><%= training.description %></td>
        <td><%= link_to 'Show', coach_training_path(training), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_coach_training_path(training), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', coach_training_path(training), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>