<div class="container">
  <h1>Meine Übungen</h1>
  <div class="text-center mb-4">
    <%= link_to "Zurück zum Home", root_path, class: "btn btn-primary btn-lg" %>
    <%= link_to 'Neue Übung', new_coach_uebung_path, class: 'btn btn-primary btn-lg' %>
  </div>
  
  <div class="card-container">
    <% @uebungs.each do |uebung| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= uebung.title %></h5>
          <hr>
          <p class="card-text"><%= truncate(uebung.description, length: 100) %></p>
          <div class="button-group">
            <%= link_to 'Show', coach_uebung_path(uebung), class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_coach_uebung_path(uebung), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', coach_uebung_path(uebung), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>